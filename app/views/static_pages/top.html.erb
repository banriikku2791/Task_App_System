<% provide(:class_text, 'login') %>
<% provide(:title, "Top") %>
<div class="col-md-7">
  <div class="center jumbotron" id="top-main">
    <h1 id="top-main-title">TaskApp</h1>
    <p>TaskAppは簡易ToDo管理ツールです。</p>
    <p>↓↓初めてのご利用↓↓</p>
      <% if logged_in? %>
        <%= link_to "アカウント作成", signup_path , class: "btn btn-lg btn-success" ,disabled: 'disabled' %>
      <% else %>
        <%= link_to "アカウント作成", signup_path , class: "btn btn-lg btn-success" %>
        <div style="margin-top: 10px;">
          <%= link_to "ゲストログイン（管理権限）", guestadmin_login_path, class: "btn btn-danger" %>
          <%= link_to "ゲストログイン（一般権限）", guest_login_path, class: "btn btn-warning" %>
        </div>
      <% end %>
  </div>
</div>
<div class="col-md-4">
  <h1>ログイン</h1>
  <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
    <% if logged_in? %>
      <%= f.label :email, "メールアドレス", class: "label-#{yield(:class_text)}" %>
      <%= f.email_field :email, class: 'form-control', readonly: 'readonly' %>
      <%= f.label :password, "パスワード", class: "label-#{yield(:class_text)}" %>
      <%= f.password_field :password, class: 'form-control', readonly: 'readonly' %>
      <%= f.label :remember_me, class: "checkbox inline checkbox-#{yield(:class_text)}", for: "remember-me" do %>
      <% end %>
      <%= f.submit "ログイン状態です", class: "btn btn-primary btn-block btn-#{yield(:class_text)}",disabled: 'disabled' %>
    <% else %>
      <%= f.label :email, "メールアドレス", class: "label-#{yield(:class_text)}" %>
      <%= f.email_field :email, class: 'form-control' %>
      <%= f.label :password, "パスワード", class: "label-#{yield(:class_text)}" %>
      <%= f.password_field :password, class: 'form-control' %>
      <%= f.label :remember_me, class: "checkbox inline checkbox-#{yield(:class_text)}", for: "remember-me" do %>
      <%= f.check_box :remember_me, id: "remember-me" %>
        <span>ログイン情報を記憶する</span>
      <% end %>
      <%= f.submit "ログイン", class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
    <% end %>
  <% end %>
</div>